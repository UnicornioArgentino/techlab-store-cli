{
  "name": "techlab-store-cli",
  "version": "1.0.0",
  "description": "CLI en Node.js para gestionar productos usando FakeStoreAPI (GET/POST/DELETE)",
  "type": "module",
  "main": "index.js",
  "keywords": [
    "node",
    "cli",
    "api",
    "fakestore",
    "portfolio"
  ],
  "author": "Juan Miguel Gigante",
  "license": "MIT",
  "scripts": {
    "smoke": "powershell -NoLogo -ExecutionPolicy Bypass -File ./scripts/smoke.ps1",
    "export": "node ./scripts/export-json.js",
    "bench": "node ./scripts/bench.js",
    "export:csv": "node ./scripts/export-csv.js",
    "test:title": "powershell -NoLogo -ExecutionPolicy Bypass -File ./scripts/assert-title.ps1 -Title 'Remera DS Análisis'",
    "test:title:raw": "powershell -NoLogo -ExecutionPolicy Bypass -File ./scripts/assert-title-raw.ps1 -Path ./export/products.json",
    "test:title:json": "node ./scripts/assert-title-json.mjs ./export/products.json \"Remera DS Análisis\"",
    "verify:producto": "node ./scripts/verify-product.mjs"
  }
}